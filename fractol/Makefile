PINK = \033[1;35m
NAME = fractol

CC = gcc
CFLAGS	= -Wall -Wextra -Werror
CMLX	= -framework OpenGL -framework AppKit -g -lmlx -Lmlx

HEADER		= ./incl/fractal.h
MLX			= ./mlx
OBJ_PATH	= ./objs
SRC_PATH	= ./srcs

SRCS = $(addprefix $(SRC_PATH)/,$(SOURCES))
OBJS = $(addprefix $(OBJ_PATH)/,$(SOURCES:.c=.o))

SOURCES	=	commands.c	 \
			draw.c		 \
			fractal.c	 \
			julia.c		 \
			julia2.c	 \
			main.c       \
			mandelbrot.c \
			start.c      \
			utils.c      \
			utils2.c     \
			ft_itoa.c    \


$(OBJ_PATH)/%.o: $(SRC_PATH)/%.c $(HEADER) Makefile
			@mkdir -p objs
			@echo "$(BLUE)$(UNDERLINE)Compiling:$(END)$(CYAN) $<"
			@${CC} ${CFLAGS} -c $< -o $@

all:	mlx ${NAME}

${NAME}:	${OBJS}
			@${CC} ${CFLAGS} ${CMLX} ${OBJS} -o ${NAME}

mlx:
		@make -C ${MLX}
		
mandelbrot: all
			@./${NAME} mandelbrot

mandelbrot1: all
			@./${NAME} mandelbrot

mandelbrot2: all
			@./${NAME} mandelbrot 2

mandelbrot3: all
			@./${NAME} mandelbrot 3

julia:	all
		@./${NAME} julia 1

julia1:	all
		@./${NAME} julia 1

julia2:	all
		@./${NAME} julia 2

julia3:	all
		@./${NAME} julia 3

julia4:	all
		@./${NAME} julia 4

julia5:	all
		@./${NAME} julia 5

julia6:	all
		@./${NAME} julia 6

julia7:	all
		@./${NAME} julia 7

julia8:	all
		@./${NAME} julia 8

julia9:	all
		@./${NAME} julia 9
		
clean:
		@rm -f ${OBJS}

fclean: clean
		@rm -f ${NAME}
		@make -C ${MLX} clean

re: fclean
	@${MAKE} all



